<div class=" col-4  align-self-start sticky-top pt-3 ">
   
    
  
      
     <% if (currentOrderDetails) { %>
      
   
   
      
     <% foundOrder.forEach(element => { %>
        <% if (currentOrderDetails.toString()===element._id.toString()) { %>
       



         <dl class="row row align-items-start  pt-3 mt-3">
             <h3>Order Status   </h3>

             <dt class="col-sm-3">Order ID: </dt>
            <dd class="col-sm-9">  <%= element._id %> </dd>
            <dt class="col-sm-3">Number of items: </dt>
            <dd class="col-sm-9"><%=element.pendingOrders.length %></dd>
          
        
            <dt class="col-sm-3">Placed By: </dt>
            <dd class="col-sm-9">
              <p><%= foundUser.name %> </p>
              
            </dd>
          
            <dt class="col-sm-3">Time Order Placed: </dt>
            <dd class="col-sm-9"><%= element.createdAt %> </dd>
          
            <dt class="col-sm-3 ">Order Items</dt>
            <dd class="col-sm-9"><% for( let i = 0; i < element.pendingOrders.length; i++ ) { %>
                <%= element.pendingOrders[i].name %> </br>
            <% } %></dd>
          
            
            <dt class="col-sm-3">Order Status </dt>
            <dd class="col-sm-9"> <div class="progress">
                <div class="progress-bar bg-warning" role="progressbar" style="width: 30%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
                Pending </dd>

            


          </dl>

        <% } %>
        
        
     <% }) %>
     <% } else { %>
        <img src="https://pixy.org/download/865841/" class="img-fluid" alt="Responsive image">
        <% }%>
</div>